{% extends 'layout.j2' %}

{% block content %}
    <div class="container">
    <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-8 col-md-7 col-sm-6">
        <h1>Deň {{ day.date }}</h1>
      </div>
        <div class="col-lg-8 col-md-7 col-sm-6">
            <a href="/?day={{ prev_day }}"><h4>Predošlý {{ prev_day }}</h4></a>
            <a href="/?day={{ next_day }}"><h4>Nasledujúci {{ next_day }}</h4></a>
        </div>
    </div>
  </div>

    <form action="/?day={{ day.date }}" method="post">
        <label for="title">Kategória</label>
        <select name="category">
            {%  for name, verbose_name in category_values.items() %}
            <option value="{{ name }}" {% if name==day.category %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Menštruácia</label>
        <select name="menstrual">
            {%  for name, verbose_name in menstrual_values.items() %}
            <option value="{{ name }}" {% if name==day.menstrual %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Pozorovanie</label>
        <select name="indicator">
            {%  for name, verbose_name in indicator_values.items() %}
            <option value="{{ name }}" {% if name==day.indicator %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Farba</label>
        <select name="color">
            {%  for name, verbose_name in color_values.items() %}
            <option value="{{ name }}" {% if name==day.color %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Pocit</label>
        <select name="sensation">
            {%  for name, verbose_name in sensation_values.items() %}
            <option value="{{ name }}" {% if name==day.sensation %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Frekvencia</label>
        <select name="frequency">
            {%  for name, verbose_name in frequency_values.items() %}
            <option value="{{ name }}" {% if name==day.frequency %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Vrchol</label>
        <input name="peak" class="form-check-input" type="checkbox" {% if day.peak %}checked{% endif %}>
        <br>

        <label for="title">Počet dní</label>
        <select name="day_count">
            {%  for name, verbose_name in day_count_values.items() %}
            <option value="{{ name }}" {% if name==day.day_count %}selected{% endif %}>{{ verbose_name }}</option>
            {% endfor %}
        </select>
        <br>

        <label for="title">Pohlavný styk</label>
        <input name="intercourse" class="form-check-input" type="checkbox" {% if day.intercourse %}checked{% endif %}>
        <br>
        <label for="title">Nový cyklus</label>
        <input name="new_cycle" class="form-check-input" type="checkbox" {% if day.new_cycle %}checked{% endif %}>
        <br>
        <label for="content">Poznámka</label>
        <br>
        <textarea name="notes"
                  rows="4"
                  cols="60"
                  >{{ day.notes }}</textarea>
        <br>
        <button type="submit">Submit</button>
    </form>
    </div>
{% endblock %}