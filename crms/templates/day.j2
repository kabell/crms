{% extends 'layout.j2' %}
{% from "form_helpers.html" import render_ratio_field,render_field %}

{% block content %}
    <div class="container">
    <div class="row">
      <div class="col-3 d-flex justify-content-center">
          <a href="/?day={{ prev_day }}"><h1><i class="fa-solid fa-arrow-left"></i></h1></a>
      </div>
        <div class="col-6 d-flex justify-content-center">
            <h1>{% if day.is_today() %}Dnes {% else %} {{ day.date }} {% endif %}</h1>
        </div>
        <div class="col-3 d-flex justify-content-center">
          <a href="/?day={{ next_day }}"><h1><i class="fa-solid fa-arrow-right"></i></h1></a>
      </div>
    <div class="row">
    <div class="col d-flex justify-content-center">
    <form action="/?day={{ day.date }}" method="post">
        <div class="form-group mb-2">
        {{ render_ratio_field(form.category) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.menstrual) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.sensation) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.indicator) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.color) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.frequency) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.peak) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.day_count) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.intercourse) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.new_cycle) }}
        </div>
        <div class="form-group mb-2">
        {{ render_field(form.notes) }}
        </div>
        <button type="submit" class="btn btn-primary">Ulož</button>
    </form>

    </div>
    </div></div>
    <div class="row">
    <div class="col"></div>
            {% if saved %}
    <div class="alert alert-success d-flex align-items-center" role="alert">
      Uložené
    </div>
    {% endif %}
    </div>
    </div>
{% endblock %}
