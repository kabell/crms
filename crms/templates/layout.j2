    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body{padding-top:80px}

        /* HIDE RADIO */
        [type=radio] {
          position: absolute;
          opacity: 0;
          width: 0;
          height: 0;
        }

        /* IMAGE STYLES */
        [type=radio] + img {
          cursor: pointer;
        }

        /* CHECKED STYLES */
        [type=radio]:checked + img {
          outline: 3px solid #00f;
        }
    </style>
</head>
